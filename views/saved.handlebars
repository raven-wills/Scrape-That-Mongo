<header>
    <h1 id="head">Recipes</h1>
    <nav class="cd-stretchy-nav">
        <a class="cd-nav-trigger" href="#0">
            Menu
            <span aria-hidden="true"></span>
        </a>
        <ul>
            <li>
                <a href="/" class="active">
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="/saved">
                    <span>Saved Articles</span>
                </a>
            </li>
            <li>
                <a href="/scrape">
                    <span>Scrape More Articles</span>
                </a>
            </li>
        </ul>

        <span aria-hidden="true" class="stretchy-nav-bg"></span>
    </nav>
</header>
<div class="modal micromodal-slide" id="modal-1" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
            <main class="modal__content" id="modal-1-content">
                <h1>Recipe Notes</h1>
                <form>
                    <textarea name="notes" id="newNoteArea" cols="60" rows="10"></textarea>
                </form>
            </main>
            <footer class="modal__footer">
                <button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">Close</button>
                <button class="modal__btn">Add</button>
            </footer>
        </div>
    </div>
</div>
<div class="recipe-list">
    {{#each recipes}}

    <div class="recipe-container">
        <div class="panal">
            <div class="panal-heading">
                <a href="{{this.link}}" target="_blank" class="recipe-link">
                    <h3 id="recipes">
                        {{this.title}}
                    </h3>
                </a>
            </div>
            <div class="description">{{this.description}}</div>
        </div>
        <div class="button-container">
            <button data-id={{this.id}} class="save" id="notes">Notes</button>
            <button data-id={{this.id}} class="save" id="remove" onclick=onUnsave(this)>Unsave</button>
        </div>
    </div>

    {{/each}}
</div>
<script src="../assets/js/main.js"></script>